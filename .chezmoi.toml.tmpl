# -*-mode:conf-toml-*- vim:ft=toml

{{/* boolean feature tags */}}
{{- $docker := false -}}{{/* true if this machine should have Docker installed */}}
{{- $ephemeral := false -}}{{/* true if this machine is ephemeral, e.g. a cloud or VM instance */}}
{{- $flarm := false -}}{{/* true if this machine is used for FLARM */}}
{{- $headless := false -}}{{/* true if this machine does not have a screen and keyboard */}}
{{- $personal := false -}}{{/* true if this machine should have personal secrets */}}
{{- "" -}}

{{- $osID := .chezmoi.os -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "id")) -}}
{{-   $osID = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{/* detect GitHub codespaces, VSCode remote containers, Docker containers, Multipass VMs, and Vagrant boxes */}}
{{- if or (env "CODESPACES") (env "REMOTE_CONTAINERS_IPC") (eq .chezmoi.username "root" "ubuntu" "vagrant" "vscode") -}}
{{-   $ephemeral = true -}}
{{-   $headless = true -}}
{{- end -}}

{{/* work around unreliable hostname on darwin */}}
{{- $hostname := .chezmoi.hostname -}}
{{- if eq .chezmoi.os "darwin" -}}
{{-   $computerName := output "scutil" "--get" "ComputerName" | trim -}}
{{-   if eq $computerName "Tomâ€™s MacBook Air" -}}
{{-     $hostname = "toms-mba" -}}
{{-   else -}}
{{-     $hostname = $computerName -}}
{{-   end -}}
{{- end -}}

{{- if eq .chezmoi.os "windows" -}}
{{-   $ephemeral = true -}}
{{- end -}}

{{- if not $ephemeral -}}
{{-   if eq $hostname "legion" -}}
{{-     $docker = true -}}
{{-     $flarm = true -}}
{{-   else if eq $hostname "raspberrypi4" -}}
{{-     $headless = true -}}
{{-     $personal = true -}}
{{-   else if eq $hostname "thinkpad" -}}
{{-     $personal = true -}}
{{-   else if eq $hostname "toms-mba" -}}
{{-     $personal = true -}}
{{-   else if stdinIsATTY -}}
{{-     $headless = promptBoolOnce . "headless" "headless" -}}
{{-     $ephemeral = promptBoolOnce . "ephemeral" "ephemeral" -}}
{{-     if not $ephemeral -}}
{{-       $docker = promptBoolOnce . "docker" "docker" -}}
{{-     end -}}
{{-   else -}}
{{-     $ephemeral = true -}}
{{-     $headless = true -}}
{{-   end -}}
{{- end -}}

{{- $email := "twpayne@gmail.com" -}}
{{- if $flarm -}}
{{-   $email = "tom.payne@flarm.com" -}}
{{- end -}}

[data]
    docker = {{ $docker }}
    ephemeral = {{ $ephemeral }}
    email = {{ $email | quote }}
    flarm = {{ $flarm }}
    headless = {{ $headless }}
    hostname = {{ $hostname | quote }}
    personal = {{ $personal }}
    onepasswordAccount = "VBDXOA4MPVHONK5IIJVKUQGLXM"
    osid = {{ $osID | quote }}















{{- if stdinIsATTY }}
  {{ $isServer := false }}
  {{ $isMobile := false }}
  {{ $manualSetup := false }}
  {{ $shell := "fish" }}
  {{- $email := promptStringOnce . "email" "Email" "simon@burgr.io" }}
  {{- $name := promptStringOnce . "name" "Name" "sb" }}
  
  {{- $isVirtual := promptBoolOnce . "isVirtual" "is this a virtual machine (y/n)" }}
  
  {{- if $isVirtual}}
  
    {{- $isServer := promptBoolOnce . "isServer" "is this machine headless (y/n)" }}
  
  {{- end}}
  
  {{- if not $isVirtual}}
  
    {{- $isMobile = promptBoolOnce . "isMobile" "is this a a laptop with wifi? (y/n)" }}
  
  {{- end}}
  
  {{- $isWorkMachine := promptBoolOnce . "isWorkMachine" "is this a work machine (y/n)" }}
  
  {{- if $isWorkMachine }}
  
