output "XEC MFG34C5Q Unknown" {
  mode 3440x1440@165.0000
  position 0,0
  scale 1.25
  alias $HOME
}

output eDP-1 {
  scale 1.0
  mode 1920x1200@60.0000
  position 0,0
  alias $INTERNAL
}

output "Philips Consumer Electronics Company PHL 329P1 *" {
 mode 3840x2160@60.0000
 scale 1.5
 alias $WORK
}

output HDMI-A-1 {
  alias $PRESENT
}

profile home {
  output $INTERNAL disable
  output $HOME enable
  exec hyprctl reload
  exec hyprctl keyword general:layout master
}

profile work {
  output $INTERNAL disable
  output $WORK enable
  exec hyprctl reload
  exec hyprctl keyword general:layout master
}


profile internal {
  output $INTERNAL enable
  exec hyprctl reload
}

profile present {
  output $INTERNAL enable 
  output $PRESENT enable 
  exec hyprctl keyword monitor HDMI-A-1,preferred,auto,1,mirror,eDP-1
}

