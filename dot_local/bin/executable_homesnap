#!/bin/bash

SNAPSHOT_NAME=$1
MODE=$2 # "before" or "after"
HOME_DIR="$HOME"
SNAPSHOT_DIR="$HOME/.homesnap"
mkdir -p "$SNAPSHOT_DIR"

SNAPSHOT_BEFORE="$SNAPSHOT_DIR/${SNAPSHOT_NAME}-before.txt"
SNAPSHOT_AFTER="$SNAPSHOT_DIR/${SNAPSHOT_NAME}-after.txt"

# üî• List of folders or patterns to exclude
EXCLUDES=(
  ".cache"
  ".homesnap"
  ".thumbnails"
  "node_modules"
  ".git"
  ".go"
  ".config/nvim"
  ".config/mozilla"
  ".local/state"
  ".local/share/chezmoi"
  ".local/share/Trash"
)

# Build fd exclusion flags
EXCLUDE_FLAGS=()
for ex in "${EXCLUDES[@]}"; do
  EXCLUDE_FLAGS+=(--exclude "$ex")
done

if [ "$MODE" == "before" ]; then
    fd . "$HOME_DIR" --type f --type d --hidden "${EXCLUDE_FLAGS[@]}" | sort > "$SNAPSHOT_BEFORE"
    echo "üì∏ Snapshot taken: ${SNAPSHOT_NAME}-before"
elif [ "$MODE" == "after" ]; then
    fd . "$HOME_DIR" --type f --type d --hidden "${EXCLUDE_FLAGS[@]}" | sort > "$SNAPSHOT_AFTER"
    echo "üì∏ Snapshot taken: ${SNAPSHOT_NAME}-after"

    echo "üîç Differences (added files/dirs):"
    comm -13 "$SNAPSHOT_BEFORE" "$SNAPSHOT_AFTER"
elif [ "$MODE" == "diff" ]; then
    comm -13 "$SNAPSHOT_BEFORE" "$SNAPSHOT_AFTER"
else
    echo "‚ùå Usage: $0 <snapshot-name> <before|after>"
fi
